<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../partials/stylesheet %>
</head>

<body>
  <% include ../partials/header %>

    <!-- Main Content -->
    <% include ../partials/content_header %>

      <% include ../partials/content_header_posting %>

        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-md-8 col-xs-8">
              <p id="subtitle">#
                <%= mode %>
              </p>
            </div>
            <div class="col-sm-4 col-md-4 col-xs-4" style="text-align:right">
              <form action="/posting/write" method="get">
                <input style="display:none;" type="text" name="posting_category" value="<%= mode %>">

                <button type="submit" class="btn btn-primary">Write</button>
              </form>
            </div>
          </div>

          <table class="table table-hover table-responsive margin-bottom">
            <thead>
              <tr>
                <th width="7%">NO</th>
                <th width="24%">Title</th>
                <th width="20%">Writer</th>
                <th width="7%">Views</th>
                <th width="7%">Votes</th>
                <th width="15%">Date</th>
                <th width="40%">Manage</th>
              </tr>
            </thead>

            <!--데이터 -->

            <% posting.forEach(function(posts){ %>
              <tbody>
                <tr>
                  <td>
                    <%= num++ %>
                  </td>
                  <td>
                    <a href="/posting/<%= posts._id %>">
                      <%= posts.title %>
                    </a>
                  </td>
                  <td>
                    <%= posts.name %>
                  </td>
                  <td>
                    <%= posts.views%>
                  </td>
                  <td>
                    <%= posts.likes %>
                  </td>
                  <td>
                    <%= posts.date %>
                  </td>
                  <td>
                    <a href="/delete/<%=posts._id%>" class="btn btn-danger" onclick="return confirm('삭제하시겠습니까?')">Delete</a>
                    <a href="/posting/update/<%=posts._id%>" class="btn btn-primary">Modify</a>
                  </td>
                </tr>
              </tbody>

              <% }); %>

          </table>

          <nav aria-label="Page navigation example" id="table-pagination">
            <ul class="pagination justify-content-center">
              <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
              </li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">4</a></li>
              <li class="page-item"><a class="page-link" href="#">5</a></li>
              <li class="page-item"><a class="page-link" href="#">6</a></li>
              <li class="page-item"><a class="page-link" href="#">7</a></li>
              <li class="page-item"><a class="page-link" href="#">8</a></li>
              <li class="page-item"><a class="page-link" href="#">9</a></li>
              <li class="page-item">
                <a class="page-link" href="#">Next</a>
              </li>
            </ul>
          </nav>

        </div>


        <% include ../partials/footer %>
          <% include ../partials/javascript %>


</body>

</html>
