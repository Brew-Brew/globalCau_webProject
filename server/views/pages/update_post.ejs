<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../partials/stylesheet %>
</head>

<body>
  <% include ../partials/header %>
  <!-- Main Content -->
    <% include ../partials/content_header %>



    <div class="container">
      <div class="nav_bt_hashtag">
        <div class="row">
          <div class="col-sm-4 col-md-4 col-xs-4">
            <a href="/posting/notice"><button type="button" class="hash_button" id="hash_button1">#Notice</button></a>
          </div>
          <div class="col-sm-4 col-md-4 col-xs-4">
            <a href="/posting/free_posting"><button type="button" class="hash_button" id="hash_button2">#Free_Posting</button></a>
          </div>
          <div class="col-sm-4 col-md-4 col-xs-4">
            <a href="/posting/recruiting_study"><button type="button" class="hash_button" id="hash_button3">#Recruting_Study</button></a>
          </div>


        </div>

        <div class="row">
          <div class="col-sm-4 col-md-4 col-xs-4">
            <a href="/posting/meet"><button type="button" class="hash_button" id="hash_button4">#Let's_meet</button></a>
          </div>
          <div class="col-sm-4 col-md-4 col-xs-4">
            <a href="/posting/photo"><button type="button" class="hash_button" id="hash_button5">#Photo</button></a>
          </div>
          <div class="col-sm-4 col-md-4 col-xs-4">
            <a href="/posting/qna"><button type="button" class="hash_button" id="hash_button6">#QnA</button></a>
          </div>
        </div>
      </div>
    </div>

    <form id="writing_form" action="/update" method="post">
      <div class="content-info">
        <input type="hidden" name="id" value="<%= posting[0]._id%>">
        <input type="hidden" id="hidden" name="name" value="<%= user.local.name %>">
        <input type="hidden" name="menu" value="posting">
        <label for="titel_name">Title</label>
        <input type="text" name="title" id="title_name" value="<%=posting[0].title%>"/><br>
        <label for="category">Category</label>
        <select name="category" id="category">
            <option value="">------------------</option>
            <option value="notice">#Notice</option>
            <option value="free_posting">#Free_Posting</option>
            <option value="recruiting_study">#Recruting_Study</option>
            <option value="meet">#Let's_meet</option>
            <option value="photo">#Photo</option>
            <option value="qna">#Qna</option>
        </select>
      </div>

      <div id="text_frame">
        <textarea name="content" id="writing_text" ><%= posting[0].content%></textarea>
      </div>

      <br>
      <div class="top_boundary" id="button_box">
        <table>
          <colgroup>
            <col style="width:80%;">
            <col style="width:10%;">
            <col style="width:10%;">
          </colgroup>
          <tr>
            <td id="fixed_left">
              <button class="button" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
              <i class="fa fa-bars"></i>
              List
            </button>
            </td>
            <td>
              <button type="button" class="button" id="cancel">
              <img id="photo_cancel" src="/images/cancel.png">
              Cancel
            </button>
            </td>
            <td>
              <button type="submit" class="button" id="submit" name="submit" value="submit">
                  <img id="photo_post" src="/images/post.png">
                  Post
            </button>
            </td>
          </tr>
        </table>
      </div>
      </div>
    </form>

    <!-- Footer -->

    <% include ../partials/footer %>
      <% include ../partials/javascript %>
</body>

</html>
