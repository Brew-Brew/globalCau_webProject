<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../partials/stylesheet %>
</head>

<body>
  <% include ../partials/header %>

    <!-- Main Content -->
    <% include ../partials/content_header %>

      <% include ../partials/content_header_posting %>


        <div class="container">
          <div class="content-info">
            <div class="row">
              <div class="col-sm-8 col-md-8 col-xs-8">
                <h4><strong>Title:</strong> <%= images[0].title %><h4>
              </div>
              <div class="col-sm-4 col-md-4 col-xs-4">
                <h4><strong>Date:</strong> <%= images[0].created %><h4>
              </div>
            </div>

        </div>

        <div class="container">
          <div class="container-image">
            <img src="/images/<%= images[0].imageName %>" class="figure-img img-fluid" alt="<%= images.imageName %>">

          </div>
          <div class="container-content">
            <p class="image-content"><%= images[0].content %></p>

          </div>


        </div>










        <div class="comment" >
          <form action="/comment/write" method="post">
            <div class="comment-write">
              <div class="row">
                <input type="hidden" id="hidden" name="name" value="<%= user.local.name %>">
                <input type="hidden" id="hidden" name="postid" value="<%= images[0]._id %>">
                <div class="col-md-4">
                  <label for="titel_name">Title</label>
                  <input type="text" name="title" id="title_name" /><br>
                </div>
                <div class="col-md-6">
                  <textarea name="content" style="width:100%"></textarea>
                </div>
                <div class="col-md-2">
                  <button type="submit" class="button" id="submit" name="submit" value="submit">
                      <img id="photo_post" src="/images/post.png">
                      Post
                </button>
                </div>
              </div>

            </div>
          </form>
          <div class="comment-content" >
            <% comment.forEach(function(comments){ %>
            <% if(comments == undefined) {%>
              <h4>댓글이 없습니다.</h4>
                <%} else {%>
                  <div class="row">
                    <div class="col-md-4">
                      Writer:
                      <%= comments.name %>
                    </div>
                    <div class="col-md-2">
                      Title:
                      <%= comments.title %>
                    </div>
                    <div class="col-md-6">
                      <%= comments.content %>
                    </div>
                  </div>
                  <% } %>
                    <% }); %>
              </div>
            </div>
          </div>
          <br>




          <% include ../partials/footer %>
          <% include ../partials/javascript %>


</body>

</html>
