<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../partials/stylesheet %>
</head>

<body>
  <% include ../partials/header %>
  <!-- Main Content -->
    <% include ../partials/content_header %>

    <% include ../partials/content_header_inf %>

    <div class="container">
      <hr>
      <form action="/write" method="post" style="margin-bottom:30pt;">
        <div class="content-info">
          <input type="hidden" id="hidden" name="name" value="<%= user.local.name %>">
          <input type="hidden" name="menu" value="inf">
          <div class="row">
            <div class="col-sm-2 col-md-2 col-xs-2">
              <label for="titel_name">Title</label>
            </div>
            <div class="col-sm-10 col-md-10 col-xs-10">
              <input style="width:95%;" type="text" name="title" />
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2 col-md-2 col-xs-2">
              <label for="category">Category</label>
            </div>
            <div class="col-sm-10 col-md-10 col-xs-10">
              <select name="category" id="category">
                <option value="">------------------</option>
                <option value="lecture">#Lecture</option>
                <option value="restaurant">#Restaurant</option>
                <option value="housing">#Housing</option>
                <option value="advertise">#Advertise</option>
                <option value="part_time_job">#Part_Time_Job</option>
                <option value="lost_found">#Lost_Found</option>
                <option value="others">#Others</option>
              </select>
            </div>
          </div>
        </div>
        <div id="text_frame">
          <textarea name="content" id="writing_text"></textarea>
        </div>

        <br>
        <div class="top_boundary" id="button_box">
          <table>
            <colgroup>
              <col style="width:80%;">
              <col style="width:10%;">
              <col style="width:10%;">
            </colgroup>
            <tr>
              <td id="fixed_left">
                <a href="/inf/<%=posting[0].category%>">
                  <button class="button" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                    List
                  </button>
                </a>
              </td>
              <td>
                <a href="/inf/<%=posting[0].category%>">
                  <button type="button" class="button btn-warning" id="cancel">
                    <img id="photo_cancel" src="/images/icon/cancel.png">
                    Cancel
                  </button>
                </a>
              </td>
              <td>
                <button type="submit" class="button btn-primary" id="submit" name="submit" value="submit">
                  <img id="photo_post" src="/images/icon/post.png">
                  Post
                </button>
              </td>
            </tr>
          </table>

        </div>

      </form>
    </div>




    <% include ../partials/footer %>
    <% include ../partials/javascript %>
</body>

</html>
