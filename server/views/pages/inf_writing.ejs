<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../partials/stylesheet %>
</head>

<body>
  <% include ../partials/header %>
  <!-- Main Content -->
    <% include ../partials/content_header %>

    <% include ../partials/content_header_inf %>

    <div class="container">
      <hr>
      <form action="/write" method="post" style="margin-bottom:30pt;">
        <div class="content-info">
          <input type="hidden" id="hidden" name="name" value="<%= user.local.name %>">
          <input type="hidden" name="menu" value="inf">
          <div class="row">
            <div class="col-sm-2 col-md-2 col-xs-2">
              <label for="titel_name">Title</label>
            </div>
            <div class="col-sm-10 col-md-10 col-xs-10">
              <input style="width:95%;" type="text" name="title" />
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2 col-md-2 col-xs-2">
              <label for="category">Category</label>
            </div>
            <div class="col-sm-10 col-md-10 col-xs-10">
              <select name="category" id="category">
                <option value="">------------------</option>
                <% if(category == "Lecture"){%>
                  <option selected value="lecture">#Lecture</option>
                <% } else{%>
                  <option value="lecture">#Lecture</option>
                <% } %>

                <% if(category == "Restaurant"){%>
                  <option selected value="restaurant">#Restaurant</option>
                <% } else{%>
                  <option value="restaurant">#Restaurant</option>
                <% } %>

                <% if(category == "Housing"){%>
                  <option selected value="housing">#Housing</option>
                <% } else{%>
                  <option value="housing">#Housing</option>
                <% } %>

                <% if(category == "Advertise"){%>
                  <option selected value="advertise">#Advertise</option>
                <% } else{%>
                  <option value="advertise">#Advertise</option>
                <% } %>

                <% if(category == "Part_Time_Job"){%>
                  <option selected value="part_time_job">#Part_Time_Job</option>
                <% } else{%>
                  <option value="part_time_job">#Part_Time_Job</option>
                <% } %>

                <% if(category == "Lost_Found"){%>
                  <option selected value="lost_found">#Lost_Found</option>
                <% } else{%>
                  <option value="lost_found">#Lost_Found</option>
                <% } %>

                <% if(category == "Others"){%>
                  <option selected value="others">#Others</option>
                <% } else{%>
                  <option value="others">#Others</option>
                <% } %>

              </select>
            </div>
          </div>
        </div>
        <div id="text_frame">
          <textarea name="content" id="writing_text"></textarea>
        </div>

        <br>
        <div class="top_boundary" id="button_box">
          <table>
            <colgroup>
              <col style="width:80%;">
              <col style="width:10%;">
              <col style="width:10%;">
            </colgroup>
            <tr>

              <td>
                <a href="/inf/<%= category %>">
                  <button type="button" class="button btn-warning" id="cancel">
                    <img id="photo_cancel" src="/images/icon/cancel.png">
                    Cancel
                  </button>
                  </a>
              </td>
              <td>
                <button type="submit" class="button btn-primary" id="submit" name="submit" value="submit">
                  <img id="photo_post" src="/images/icon/post.png">
                  Post
                </button>
              </td>
            </tr>
          </table>
        </div>
      </form>
    </div>




    <% include ../partials/footer %>
    <% include ../partials/javascript %>
</body>

</html>
