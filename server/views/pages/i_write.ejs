<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../partials/stylesheet %>
</head>

<body>
  <% include ../partials/header %>
  <!-- Page Header -->
    <div id="header_title">
      <h1 id="header_titleName">C A ìœ </h1>
    </div>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="page-heading" id="header_content">
          <div id="contentNav">
            <table id="contentNav_table">
              <colgroup>
                <col style="width:20%;">
                <col style="width:10%;">
                <col style="width:25%;">
                <col style="width:10%;">
                <col style="width:35%;">
              </colgroup>
              <tr>
                <td><a href="/intro" class="contentNav_details">Intro</a></td>
                <td><p class="contentNav_details">|</p></td>
                <td><a href="/posting" class="contentNav_details">Posting</a></td>
                <td><p class="contentNav_details">|</p></td>
                <td><a href="/i_lecture" class="contentNav_details" id="information_title">Information</a></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div id="button_frame">
      <div id="topbutton_frame">
        <table id="topbutton_table">
          <colgroup>
            <col style="width:20%;">
            <col style="width:30%;">
            <col style="width:20%;">
            <col style="width:30%;">
          </colgroup>
          <tr>
            <td>
              <div id="lecture">
                <a href="/i_lecture"><button type="button" class="information_nav" id="lecture_button">#Lecture</button></a>
              </div>
            </td>
            <td>
              <div id="restaurant">
                <a href="/i_restaurant"><button type="button" class="information_nav" id="restaurant_button">#Restaurant</button></a>
              </div>
            </td>
            <td>
              <div id="housing">
                <a href="/i_housing"><button type="button" class="information_nav" id="housing_button">#Housing</button></a>
              </div>
            </td>
            <td>
              <div id="advertise">
                <a href="/i_advertise"><button type="button" class="information_nav" id="advertise_button">#Advertise</button></a>
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div id="bottombutton_frame">
        <table id="bottombutton_table">
          <colgroup>
            <col style="width:40%;">
            <col style="width:40%;">
            <col style="width:20%;">
          </colgroup>
          <tr>
            <td>
              <div id="ptj">
                <a href="/i_ptj"><button type="button" class="information_nav" id="ptj_button">#Part_Time_Job</button></a>
              </div>
            </td>
            <td>
              <div id="lf">
                <a href="/i_lf"><button type="button" class="information_nav" id="lf_button">#Lost_Found</button></a>
              </div>
            </td>
            <td>
              <div id="others">
                <a href="/i_others"><button type="button" class="information_nav" id="others_button">#Others</button></a>
              </div>
            </td>
          </tr>
        </table>
      </div>

  </div>

  <form id="writing_form" action="/i_write" method="post">
    <table class="boundary" id="writing_table">
      <colgroup>
        <col style="width:20%;">
        <col style="width:80%;">
      </colgroup>
      <tr class="boundary">
        <td><p class="index">Title</p></td>
        <td><input type="text" name="title" id="title_name" /></td>
      </tr>
      <tr class="boundary">
        <td><p class="index">Category</p></td>
        <td>
          <select name="category">
            <option value="">------------------</option>
            <option value="lecture">#Lecture</option>
            <option value="restaurant">#Restaurant</option>
            <option value="housing">#Housing</option>
            <option value="advertise">#Advertise</option>
            <option value="ptj">#Part_Time_Job</option>
            <option value="lf">#Lost_Found</option>
            <option value="others">#Others</option>
          </select>
        </td>
      </tr>
      <tr>
        <td><p class="index">Attachment</p></td>
        <td>
          <input type="text" id="fileName" class="file_input_textbox" readonly>
          <div class="file_input_div">
            <img src="/images/search.jpg" class="file_input_img_btn" alt="open" />
            <input type="file" id="attachment_name" class="file_input_hidden" name="file" accept="image/*" onchange="javascript: document.getElementById('fileName').value = this.value"/>
        </td>
      </tr>
    </table>
    <div id="text_frame">
      <textarea name="content" id="writing_text"></textarea>
    </div>
    <input type="hidden" id="hidden" name="name" value ="<%= user.local.name %>" >
    <br>
    <div class="top_boundary" id="button_box">
      <table>
        <colgroup>
          <col style="width:80%;">
          <col style="width:10%;">
          <col style="width:10%;">
        </colgroup>
        <tr>
          <td id="fixed_left">
            <button class="button" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
              <i class="fa fa-bars"></i>
              List
            </button>
          </td>
          <td>
            <button type="button" class="button" id="cancel">
              <img id="photo_cancel" src="/images/cancel.png">
              Cancel
            </button>
          </td>
          <td>
            <button type="submit" class="button" id="submit" name="submit" value="submit">
                  <img id="photo_post" src="/images/post.png">
                  Post
            </button>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </form>

      <!-- Footer -->
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <ul class="list-inline text-center">
                <li class="list-inline-item">
                  <a href="#">
                    <span class="fa-stack fa-lg">
                      <i class="fa fa-circle fa-stack-2x"></i>
                      <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                    </span>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="#">
                    <span class="fa-stack fa-lg">
                      <i class="fa fa-circle fa-stack-2x"></i>
                      <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                    </span>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="#">
                    <span class="fa-stack fa-lg">
                      <i class="fa fa-circle fa-stack-2x"></i>
                      <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                    </span>
                  </a>
                </li>
              </ul>
              <p class="copyright text-muted">Copyright &copy; Your Website 2017</p>
            </div>
          </div>
        </div>
      </footer>
    <% include ../partials/footer %>
    <% include ../partials/javascript %>
</body>

</html>
